<style>
    #Straight_Discount {
        width:100%;
        height:100%;
        background-color:#122344;
        color:#FFFFFF;
        position:relative;
    }
    #Straight_Discount-Inner-wrapper { 
        width:98%;
        position:absolute;
        top:50%;
        left:50%;
        margin-left:0.3em;
        transform:translate(-50%,-50%);
        -webkit-transform:translate(-50%,-50%);
        -moz-transform:translate(-50%,-50%);
    }
    #Straight_Discount-DiscountDetails {
        font-size:1em;
        line-height: 1.5;
    }
    #Straight_Discount-PercentOff,
    #Straight_Discount-DiscountType,
    #Straight_Discount-Redemption {
        font-size:45px;
        line-height:1;
    }


</style>

<div id="Straight_Discount" class="sds_uppercase sds_font--primary sds_tx_left">
    <div id="Straight_Discount-Inner-wrapper">
            <div id="Straight_Discount-DiscountDetails">line here</div>
            <div class="adjFontSize" id="Straight_Discount-PercentOff">00% off</div>
            <div class="adjFontSize" id="Straight_Discount-DiscountType">almost</div>
            <div class="adjFontSize" id="Straight_Discount-Redemption">everything</div>
    </div>
</div>


<script>
var elm = document.getElementsByClassName("adjFontSize");
var textLength;

for (var i = 0; i < elm.length; i++) {
    textLength = parseInt(elm[i].innerHTML.length);
    
    if(window.screen.width > 787 && textLength >= 15){      
        elm[i].style.fontSize =  "30px";
        }
    else if(window.screen.width < 321 && textLength >= 15){
        elm[i].style.fontSize =  "21px";
    }
    else if(window.screen.width < 787 && textLength >= 15){
         elm[i].style.fontSize =  "25px";
        }  
    else {
         elm[i].style.fontSize =  "45px";
    }   
}
</script>